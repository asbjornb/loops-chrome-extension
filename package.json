{
  "name": "loops-chrome-extension",
  "version": "0.0.1",
  "description": "Close tabs, keep context - A Chrome extension for better tab management",
  "scripts": {
    "generate-icons": "node scripts/generate-icons.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "npm run test:conflicts && npm run test:sw",
    "test:sw": "node test-service-worker.js",
    "test:conflicts": "node test-variable-conflicts.js",
    "precommit": "npm run test && npm run lint",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,html,css,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "author": "Asbj√∏rn Brandt",
  "license": "MIT"
}
